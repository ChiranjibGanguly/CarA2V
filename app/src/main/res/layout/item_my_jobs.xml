<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:padding="@dimen/_9sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/textNormalSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/itemCarName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/lato_regular"
                            android:text="Nissan Terrano"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSlideSize" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/itemVinCodeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/lato_regular"
                                android:text="IUKJFDKSDJKFJFJ"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlueText"
                                android:textSize="@dimen/textTabSize" />

                            <TextView
                                android:id="@+id/itemCarNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/lato_regular"
                                android:text="UK 09 MV 522"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textTabSize" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!--<LinearLayout
                        android:id="@+id/carNoLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">


                    </LinearLayout>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/serviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Nissan Terrano"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textSmallSize" />


                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/serviceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/lato_bold"
                android:text="More details"
                android:textColor="@color/OnlnServiceTxt" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
