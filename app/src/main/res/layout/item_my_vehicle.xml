<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_3sdp"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/carImg"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width=".8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp">

                <TextView
                    android:id="@+id/carNoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Sujuki"
                    android:textColor="@color/OnlnServiceTxt"
                    android:textSize="@dimen/textTabSize" />

                <TextView
                    android:id="@+id/carModelTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/carNoTxt"
                    android:text="Sujuki"
                    android:textColor="@color/colorBlueText"
                    android:textSize="@dimen/textSmallSize" />

                <TextView
                    android:id="@+id/carBrandTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carModelTxt"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Sujuki Vitara Brezza"
                    android:textColor="@color/OnlnServiceTxt"
                    android:textSize="@dimen/textSmallSize" />

                <TextView
                    android:id="@+id/carVinTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carBrandTxt"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="sdfsdfsdfsdfsdsd"
                    android:textColor="@color/colorBlueText"
                    android:textSize="@dimen/textTabSize" />

                <TextView
                    android:id="@+id/carYearTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/carBrandTxt"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="2007"
                    android:textColor="@color/OnlnServiceTxt"
                    android:textSize="@dimen/textTabSize" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
