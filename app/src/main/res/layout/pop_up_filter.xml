<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_109sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_17sdp">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:shadowRadius="2"
        android:background="@color/white"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:id="@+id/popPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Price"
            android:textColor="@color/colorPrimaryDarkHome"
            android:textSize="@dimen/textNormalSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".7dp"
            android:background="@color/colorInActiveText" />
    <TextView
            android:id="@+id/popMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Miles"
            android:textColor="@color/colorPrimaryDarkHome"
            android:textSize="@dimen/textNormalSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".7dp"
            android:background="@color/colorInActiveText" />
    <TextView
        android:id="@+id/popReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="Review"
        android:textColor="@color/colorPrimaryDarkHome"
        android:textSize="@dimen/textNormalSize" />
</LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/filter_option"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_13sdp"/>
</RelativeLayout>
