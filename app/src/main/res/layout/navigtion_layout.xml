<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/fstSlTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Profile"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSlideSize" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/sndSlTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Friends"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        >
        <TextView
            android:id="@+id/rdSlTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Chat"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:id="@+id/rdCountFrm"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/red_circle"
            android:visibility="gone"
            android:layout_toRightOf="@id/rdSlTab"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:id="@+id/rdCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="100"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/frthSlTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Add Account Info"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize"
            android:layout_centerVertical="true"/>
        <FrameLayout
            android:id="@+id/frthCountFrm"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/red_circle"
            android:visibility="gone"
            android:layout_toRightOf="@id/frthSlTab"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:id="@+id/frthCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="100"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/fifthSlTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Promo Code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/sxthSlTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Feedback"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textLeargeSize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/svnthSlTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Profile"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/ethSlTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Logout"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSlideSize" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
