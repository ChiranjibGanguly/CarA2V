<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_270sdp"
                    android:background="@drawable/welcome_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        >

                        <ImageView
                            android:id="@+id/backBtn"
                            android:layout_width="@dimen/_33sdp"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:src="@drawable/back_icon"
                            android:visibility="visible"
                            android:padding="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/titleTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/raleway_regular"
                            android:text="Edit Profile"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textLeargeSize" />

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/logo"
                        android:layout_marginTop="@dimen/_10sdp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_270sdp">

                    <RelativeLayout
                        android:id="@+id/prflImgLay"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true">

                        <com.github.siyamed.shapeimageview.HexagonImageView
                            android:id="@+id/prflImage"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:src="@drawable/user_1"
                            app:siBorderColor="@color/colorDevider"
                            app:siBorderWidth="1.5dp" />

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:src="@drawable/camera" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/businessNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:hint="Business Name"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorBlueText"
                android:textColorHint="@color/colorBlueText"
                android:textSize="@dimen/textNormalSize" />

            <View
                android:id="@+id/busiView"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorDevider" />

            <EditText
                android:id="@+id/userNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:hint="Username"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorBlueText"
                android:textColorHint="@color/colorBlueText"
                android:textSize="@dimen/textNormalSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorDevider" />

            <EditText
                android:id="@+id/userEmailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/colorBlueText"
                android:textColorHint="@color/colorBlueText"
                android:textSize="@dimen/textNormalSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorDevider" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/addressTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Address"
                    android:singleLine="true"
                    android:textColor="@color/colorBlueText"
                    android:textColorHint="@color/colorBlueText"
                    android:textSize="@dimen/textNormalSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0">

                    <fragment
                        android:id="@+id/placeAddressFragment"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorDevider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/spinCountryCode"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorBlueText"
                    android:textColorHint="@color/colorBlueText"
                    android:textSize="@dimen/textNormalSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/drop_down_icon" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@color/colorDevider" />

                <EditText
                    android:id="@+id/userphnNumTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Contact Number"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/colorBlueText"
                    android:textColorHint="@color/colorBlueText"
                    android:textSize="@dimen/textNormalSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorDevider" />




            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner_blue_bg"
                android:fontFamily="@font/lato_regular"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textNormalSize" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
