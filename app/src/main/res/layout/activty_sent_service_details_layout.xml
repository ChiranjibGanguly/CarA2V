<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/quoteLay"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight=".35"
                        android:background="@color/colorOrange"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/quoteTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textMediamSize" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/dateTimeTxt"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight=".65"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/lato_bold"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/textMediamSize" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:background="@color/colorInActiveText" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Estimate Price"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <TextView
                        android:id="@+id/estPriceTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/lato_bold"
                        android:text=""
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/textNormalSize" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:background="@color/colorInActiveText" />

                <RelativeLayout
                    android:id="@+id/vehicleInfoLay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Vehicle Info"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/right_side" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:background="@color/colorInActiveText" />
                <RelativeLayout
                    android:id="@+id/consumerInfoLay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Consumer Info"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/right_side" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:background="@color/colorInActiveText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Description"
                    android:textColor="@color/colorBlueText"
                    android:textSize="@dimen/textNormalSize" />

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_regular"
                    android:text="N/A"
                    android:hint="N/A"
                    android:textColorHint="@color/OnlnServiceTxt"
                    android:textColor="@color/OnlnServiceTxt"
                    android:textSize="@dimen/textTabSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorInActiveText" />

                <RelativeLayout
                    android:id="@+id/serviceQuotesLay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Service Quotes"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@drawable/right_side" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorInActiveText" />

                <RelativeLayout
                    android:id="@+id/cpnLay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Coupon"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/textNormalSize" />

                    <TextView
                        android:id="@+id/cupnAmtTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text=""
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <TextView
                        android:id="@+id/cupnCodeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittxt_bg"
                        android:text=""
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/cupnAmtTxt"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </RelativeLayout>
                <View
                    android:id="@+id/cpnView"
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorInActiveText" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Payment Mode"
                        android:textColor="@color/colorBlueText"
                        android:textSize="@dimen/textNormalSize" />

                    <TextView
                        android:id="@+id/paymentModeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/lato_bold"
                        android:text=""
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/textNormalSize" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorInActiveText" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/visibleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        android:alpha=".8"
        android:background="@color/white"
        android:visibility="visible"></LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/AlertDialog.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
