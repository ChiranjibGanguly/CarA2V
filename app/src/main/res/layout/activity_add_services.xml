<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cara2v.ui.activity.owner.AddServicesActivity">


    <include
        android:id="@+id/titleLay"
        layout="@layout/title_bar" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/addServiceInfoHeader"
        android:textAlignment="center"
        android:textColor="@color/colorBlueText"
        android:textSize="@dimen/textMediamSize" />
    <ImageView
        android:id="@+id/backImg"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/back_blue"
        android:visibility="visible"
        android:padding="@dimen/_5sdp"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/serviceRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="LinearLayoutManager" />

        <Button
            android:id="@+id/skipBtn"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_blue_bg"
            android:paddingLeft="@dimen/_35sdp"
            android:paddingRight="@dimen/_35sdp"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textNormalSize" />

    </RelativeLayout>

</LinearLayout>
